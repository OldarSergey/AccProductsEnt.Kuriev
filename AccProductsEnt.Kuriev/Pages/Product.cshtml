@model AccProductsEnt.Kuriev.Pages.ProductModel
@{
}
<div class="col">
    <a class="btn mb-2 " style="background-color:cadetblue; color:white" asp-page="AddProduct">Add employee</a>
</div>
<div class="row mx-5  justify-content-center ">
    @foreach (var item in Model.Products)
    {
        <div class="col-3 ms-5  card shadow  mb-5" @*style="width: 36rem;"*@>
            <div class="col border-secondary" style="display:flex;">
                <img src="@item.ImgPath">
            </div>
            <div class="col ">
                <h1>@item.ProductName</h1>
                <span>@item.Description</span>
                <span>@item.Quantity</span>
                <span>@item.PricePerPiece</span>
                <span>@item.DateOfManufacture</span>
            </div>
        </div>
    }
    

</div>

